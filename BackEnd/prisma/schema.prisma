datasource db {
  provider = "mysql" // or your preferred database provider

  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
enum Role {
  general
  admin
}


model User {
  id        String  @id @default(uuid())
  name      String?
  email     String  @unique
  password  String  @db.VarChar(255)
  role      Role   @default(general)
  tokens    RefreshToken[]
  createdAt   DateTime @default(now())

  @@map("user")
}

model Product {
  id            String     @id @default(uuid())
  name          String
  description   String
  price         Float
  imageUrl      String
  stock         Int
  createdAt     DateTime   @default(now())

}


model RefreshToken{
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  refreshToken String
  accessToken  String

  @@map("refresh_token")
}

