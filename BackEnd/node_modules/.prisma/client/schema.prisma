datasource db {
  provider = "mysql" // or your preferred database provider

  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  general
  admin
}

model user {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String  @db.VarChar(255)
  role     Role    @default(general)

  @@map("user")
}
